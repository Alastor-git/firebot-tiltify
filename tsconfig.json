{
    "compilerOptions": {
        "outDir": "./dist/",
        "target": "ES2022",
        "module": "CommonJS",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["./src/shared/*"],
            "@services/*": ["./src/services/*"]
        }
    },
    "include": [
        "./src/**/*", 
        "tests/mocks/mocks.test.ts", 
        "src/node_modules/@crowbartools/firebot-custom-scripts-types/modules", 
        "src/node_modules/@crowbartools/firebot-custom-scripts-types/index.d.ts"
    ],
    "exclude": [
        "node_modules", 
        ".vscode"
    ]
}
